<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Skip rewriting if already pointing to owlet/public
    RewriteCond %{REQUEST_URI} ^/owlet/public/
    RewriteRule ^ - [L]

    # Serve static files from owlet/public if they exist (JS, CSS, images)
    RewriteCond %{DOCUMENT_ROOT}/owlet/public%{REQUEST_URI} -f
    RewriteRule ^(.*)$ owlet/public/$1 [L]

    # Route everything else to Laravel's index.php
    RewriteRule ^(.*)$ owlet/index.php [L]
</IfModule>
